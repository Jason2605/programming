// Example 1
var x = input("Please enter an integer: ").toNumber();

if (x < 0) {
    x = 0;
    print("Negative changed to zero");
} else if (x == 0) {
    print("Zero");
} else if (x == 1) {
    print("Single");
} else {
    print("More");
}

